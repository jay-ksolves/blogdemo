
<div class=" makeme card text-center  text-emphasis-info border-primary">
<div class="container">
  <div class ="card-header">
<h2><i class="fa-solid fa-user-plus fa-xl" style="color: #2bda8e;"></i> Sign Up  for a new account</h2>
</div>
<div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
 <%= render "devise/shared/error_messages", resource: resource%>

<br>



<div class="form-floating mb-3">
<div class="field">

   <%= f.text_field :name ,class:"form-control",placeholder:"Name"%>
 </div>
 <br>
  <div class="field">
   
    <%= f.email_field :email, autofocus: true, autocomplete: "email" ,class:"form-control",placeholder:"Email-ID*"%>
  </div>
<br>
<div style="">
<p><b>Choose Your Role</b></p>
<div class="field form">

     <%= f.radio_button :role, 'admin',class:"form-check-input" %>
     <%= f.label :role_admin, 'Admin',class:"form-check-label" %>

     <%= f.radio_button :role, 'editor' ,class:"form-check-input"%>
     <%= f.label :role_editor, 'Editor',class:"form-check-label" %>

     <%= f.radio_button :role, 'normal_user',class:"form-check-input" %>
     <%= f.label :role_normal_user, 'Normal User',class:"form-check-label" %>

</div>
</div>
<br>
  <div class="field">

    <%= f.password_field :password, autocomplete: "new-password", class:"form-control",placeholder:"Password*"%>
  </div>
  <div style=text-align:left>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    </div>
<br>
  <div class="field">
  
    <%= f.password_field :password_confirmation, autocomplete: "new-password" ,class:"form-control",placeholder:"Confirm Password*"%>
  </div>
<br>
<div style="text-align:left;">
  <em ><b>Upload Profile Picture</b></em></div>
<div class="field">

    <%= f.file_field :userimage ,class:"form-control",placeholder:"upload Profile Picture"%>
 
</div>
<br>
  <div class="actions d-grid gap-2">
    <%= f.submit "Sign up" ,class: "btn btn-lg btn-outline-success"%>
  </div>
<% end %>
<br>
<hr>
<%= render "devise/shared/links"%>
</div>
</div>
</div>