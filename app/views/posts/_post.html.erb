<div id="<%= dom_id post %>">
<div class="container">

  <p>
    <strong>Title:</strong>
    <%= post.title %>
    <h6><%= pluralize(post.view,"view") %></h6>
    <h5>Posted by: <%= link_to post.user.name,user_path(post.user) %></h5> 
  </p>

  <div>
    <strong>Body:</strong>
    <%= post.body %>
  </div>

</div>
</div>