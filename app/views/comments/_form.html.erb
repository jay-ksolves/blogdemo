<%= form_with(model: [post, comment]) do |f| %>
<div class="form-control">
  <br />
  <h6 style="color: black; font-weight: bold">Type your comment here</h6>
  <br />
  <%= f.text_area :body ,rows: 4 ,cols:60%>
   <br>
  <% if flash[:alert] %>
   <div class="alert alert-danger">
     <%= flash[:alert] %>
   </div>
  
 <% end %>
  
  <br />
  <%= f.submit submit_label,class: "btn btn-lg btn-outline-dark" %>
</div>


<% end%>
