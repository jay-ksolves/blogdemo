<!-- app/views/posts/_form.html.erb -->

<% if post.image? %>
  <div class="image_wrapper">
    <%= image_tag post.image.thumb.url %>
  </div>
<% end %>
<%= form_for post do |f| %>
  <div class="form-group">
    <%= f.text_field :title, placeholder: 'Title', class: 'form-control form-control-lg' %>
  </div>
  <div class="form-group">
    <%= f.text_area :body, placeholder: 'The body of your post goes here...', class: 'form-control form-control-lg', rows: '10' %>
  </div>
  <div class="form-group">
    <%= f.file_field :image, class: 'form-control-file' %>
  </div>
  <% if post.image? %>
    <div class="form-check">
      <label class="form-check-label">
        <%= f.check_box :remove_image, class: 'form-check-input' %>
        Remove Image
      </label>
    </div>
  <% end %>
  <%= f.submit 'Create Post', class: 'btn btn-primary btn-lg'%>
<% end %>
