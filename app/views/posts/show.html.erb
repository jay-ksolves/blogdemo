<br />
<div class="container glass2">
  <br />
  <%= render @post %>
    <br />

    <h6 class="text-center">
      <br />
      <%= pluralize(@post.comments.distinct.count(:user_id), 'user' ) %> commented
        on this Post.
    </h6>

    <br />
    <div class="text-center">
      <%= link_to "  Edit this post" , edit_post_path(@post) , class:"btn btn-lg btn-outline-dark fa-regular fa-pen-to-square"%> | <%=
          link_to "  Back to posts" , posts_path , class:"btn btn-lg btn-outline-warning fa-solid fa-backward" %>
          <br />
          <br />
    </div>
</div>
<br />

<div class="container glass2">
  <br />
  <%= render 'comments/form' , post: @post,comment: @post.comments.build ,submit_label: "Reply" %>
    <br />

    <% @comments.order(created_at: :desc).first(5).reverse.each do |comment| %>
       <%= render 'comments/comment', post: @post, comment: comment %>
    <% end %>
  
</div>