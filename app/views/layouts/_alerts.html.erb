<% if notice %>
  <div id="notice-alert" class="alert alert-success" role="alert" style="padding: 10px 15px; margin: 20px auto; max-width: 700px;">
    <br>
    <h3 class="notice alert-heading" style="color: green; text-align: center;"><%= notice %> <i class="fa-solid fa-check-double  fa-lg" style="color: #5af00a;"></i></h3>
    <br>
  </div>
<% elsif alert %>
  <br>
  <div id="alert-alert" class="alert alert-danger" role="alert" style="padding: 10px 15px; margin: 0 auto; max-width: 700px;">
    <h3 class="alert alert-heading" style="color: red; text-align: center;"><%= alert %> <i class="fa-solid fa-triangle-exclamation fa-lg" style="color: #df0707;"></i></h3>
  </div>
<% end %>