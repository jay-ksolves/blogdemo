<%= form_with(model: [post,post.comments.build]) do |f| %>
    <div class="form-control">
        <br>
        <h6 style="color:black;font-weight:bold;">Type your comment here</h6>
        <br>
        <%= f.text_area :body ,rows: 4 ,cols:50%>
        <br>
        <%= f.submit "Reply" ,class: "btn  btn-lg btn-outline-dark" %>
    </div>
<% end%>