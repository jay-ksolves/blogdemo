



<br /><br />

<div class="container card mb-10">
  <br />
  <div class="card border-danger mb-3">
    <br />
    <br />

    <% if @user.userimage.present? %>
    <div class="text-center">
      <%= image_tag (@user.userimage.url) ,alt: 'User Image' ,class:"
      img-thumbnail img-fluid",style:"height:300px;width:300px;
      border-radius:100%"%>
      <p>
        <em><b>Profile Image</b></em>
      </p>
    </div>
    <% else %>
    <div class="text-center">
      <%= image_tag "default_image.jpg" ,class:" img-thumbnail
      img-fluid",style:"height:300px;width:300px; border-radius:100%"%>
      <p>
        <em><b>Default Profile Image</b></em>
      </p>
    </div>

    <%end%>
    <div class="container mb-10" ,style="">
      <table>
        <br />
        <tr>
          <td>
            <h2 style="color: rgb(3, 37, 4)">ðŸ”¹User Name:</h2>
          </td>
          <td>
            <h3 style="color: rgb(76, 192, 82)"><%= @user.name %></h3>
          </td>
        </tr>
        <br />
        <tr>
          <td>
            <h2 style="color: rgb(1, 26, 2)">ðŸ”¹User Email:</h2>
          </td>
          <td>
            <h3 style="color: rgb(84, 217, 89)"><%=@user.email%></h3>
          </td>
        </tr>
        <br />
        <tr>
          <td>
            <h3 style="color: rgb(1, 26, 2)">
                ðŸ”¹ Number of views on "<em><%=@user.name%></em>" Profile:
            </h3>
          </td>
          <td>
            <h3 style="color: rgb(84, 217, 89)">
              <%= pluralize(@user.views,"view" )%>
            </h3>
          </td>
        </tr>

        <br />
        <h3>
          <tr>
            <td>
                  <em><%=@user.name%></em> <%= " have added #{@user.comments.where(post_id:
              @post_id).count} comment(s) on this post." %>
            </td>
          </tr>
        </h3>
      </table>
    </div>
    <br />
    <br />
    <%= link_to " Back to posts" , posts_path , class:"btn btn-lg
    btn-outline-warning fa-solid fa-backward" %>
    <br />
    <br />
  </div>
</div>
