
<div class=" makeme card text-center  text-emphasis-info border-primary">
<div class="container">
  <div class ="card-header text-info">
<h2><i class="fa-solid fa-user-plus fa-xl" style="color: #2bda8e;"></i> Sign Up  for a new account</h2>
</div>
<div>
<br>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
 <%= render "devise/shared/error_messages", resource: resource%>




<div class="form-floating mb-3">
<div class="field">

   <%= f.text_field :name ,class:"form-control",placeholder:"Name"%>
 </div>
 <br>
  <div class="field">
   
    <%= f.email_field :email, autofocus: true, autocomplete: "email" ,class:"form-control",placeholder:"Email-ID*"%>
  </div>
<br>


<br>
  <div class="field">

    <%= f.password_field :password, autocomplete: "new-password", class:"form-control",placeholder:"Password*"%>
  </div>
  <div style=text-align:left>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    </div>
<br>
  <div class="field">
  
    <%= f.password_field :password_confirmation, autocomplete: "new-password" ,class:"form-control",placeholder:"Confirm Password*"%>
  </div>
<br>
<div style="text-align:left;">
  <em ><b>Upload Profile Picture</b></em></div>
<div class="field">

    <%= f.file_field :userimage ,class:"form-control",placeholder:"upload Profile Picture"%>
 
</div>
<br>
  <div class="actions d-grid gap-2">
    <%= f.submit "Sign up" ,class: "btn fa-solid text-center btn-outline-success"%>
  </div>
<% end %>
<br>

<div class="d-grid btn-group gap-2 d-flex align-items-center text-center justify-content-center">
<%= button_to "  Facebook Login", user_facebook_omniauth_authorize_path , class:"btn btn-outline-primary fa fa-solid fa-facebook-square", data: { turbo: false }%>

<%= button_to "  Google Login", user_google_oauth2_omniauth_authorize_path , data: { turbo: false },class:"btn btn-outline-dark fa fa-solid fa-google"%>
</div>
<br>
<hr>
<%= render "devise/shared/links"%>
</div>
</div>
</div>