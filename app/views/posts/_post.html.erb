

<div id="<%= dom_id post %>">

<div class="container">
<div class=" card text-center p-3 mb-2 bg-success-subtle text-emphasis-info border-success">
  <p >
    <strong class="intro">Title:  </strong>
    <%= post.title %>

  </p>

  <div>
    <strong class="intro">Body:   </strong>
    <%= post.body %>
  </div>
  <p><h6><%= pluralize(post.view,"view") %></h6>
    <h5>Posted by: <%= link_to post.user.email,user_path(post.user) %></h5>
    </p>
</div>
</div>
</div>